<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolBarStyle">
        <item name="android:background">@color/mainBackgroundColor</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="ToolBarTitleStyle">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Theme.SportifyAndroidAppMain" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>

    <style name="Theme.SportifyAndroidAppMain.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SportifyAndroidAppMain.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_round_back</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="titleTextColor">@color/colorPrimaryDark</item>
    </style>
</resources>